# Define user
set $home "/home/pmi_glisboa"

# Configure screen
exec --no-startup-id $home/.screenlayout/main.sh

# Configure keyboard
exec --no-startup-id setxkbmap us

# Config polybar
exec --no-startup-id polybar -c $home/.config/polybar/config.ini main

# Start picom
exec --no-startup-id picom -i 1 -e 1 -D 8 -o 0 -r 0 -b

# Define workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Define modes
set $mode_applications "applications"
set $mode_bluetooth "bluetooth"
set $mode_uol "UOL HOST"
set $mode_windows_manager "windows manager"
set $mode_resize "resize"

# Define colors
set $bg-color 	         #131313
set $inactive-bg-color   #131313
set $text-color          #C6C6C4
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935
set $accent-color     	 #0073E5

# Define the mod key
set $mod Mod1

# Define bluetooth mac addresses
set $headset "E8:EE:CC:68:AB:C6"

# Assign workspaces
assign [instance="(?i)teams"] $ws1
assign [class="Alacritty"] $ws2
assign [class="NeoVim"] $ws3
assign [class="jetbrains-idea-ce"] $ws3
assign [class="(?i)firefox"] $ws4
assign [class="VirtualBox Machine"] $ws5
assign [class="steam"] $ws5
assign [title="Discord"] $ws5
assign [class="calibre"] $ws6
assign [class="Pavucontrol"] $ws6
assign [class="cisco"] $ws6
assign [class="Chromium"] $ws7
assign [class="squirrel"] $ws7
assign [class="Postman"] $ws8
assign [class="Remmina"] $ws9
assign [class="Anki"] $ws9
assign [class="Stremio"] $ws10
assign [class="ZSTray"] $ws10

# Kill focused window
bindsym $mod+Shift+k kill

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+a workspace number $ws1
bindsym $mod+s workspace number $ws2
bindsym $mod+d workspace number $ws3
bindsym $mod+f workspace number $ws4
bindsym $mod+g workspace number $ws5
bindsym $mod+t workspace number $ws6
bindsym $mod+r workspace number $ws7
bindsym $mod+e workspace number $ws8
bindsym $mod+w workspace number $ws9
bindsym $mod+q workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+a move container to workspace number $ws1
bindsym $mod+Shift+s move container to workspace number $ws2
bindsym $mod+Shift+d move container to workspace number $ws3
bindsym $mod+Shift+f move container to workspace number $ws4
bindsym $mod+Shift+g move container to workspace number $ws5
bindsym $mod+Shift+t move container to workspace number $ws6
bindsym $mod+Shift+r move container to workspace number $ws7
bindsym $mod+Shift+e move container to workspace number $ws8
bindsym $mod+Shift+w move container to workspace number $ws9
bindsym $mod+Shift+q move container to workspace number $ws10

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Start dmenu
bindsym $mod+semicolon exec --no-startup-id i3-dmenu-desktop --dmenu='dmenu -i -fn "MesloLGS NF Regular-12" -nb "$bg-color" -sb "$accent-color" -nf "$text-color"'

# Enter fullscreen mode for the focused container
bindsym $mod+Return fullscreen toggle

# Turn off the PC
bindsym $mod+Shift+F4 exec --no-startup-id poweroff

# Reload the configuration file
bindsym $mod+F5 restart

# Take a screenshot
bindsym --release Print exec --no-startup-id scrot --silent $home/Pictures/screenshot_%d-%m-%Y_%H-%M-%S.png
bindsym --release $mod+Insert exec --no-startup-id scrot --silent --select $home/Pictures/screenshot_%d-%m-%Y_%H-%M-%S.png

# Switch to mode
bindsym $mod+space mode $mode_applications
bindsym $mod+b mode $mode_bluetooth
bindsym $mod+u mode $mode_uol
bindsym $mod+Shift+Return mode $mode_windows_manager
bindsym $mod+Shift+space mode $mode_resize

mode $mode_applications {
  # workspace 1: A
  bindsym Shift+t exec chromium --class Teams --app=https://teams.microsoft.com/, workspace number 1, mode "default"

  # workspace 2: S
  bindsym t exec /home/pmi_glisboa/.cargo/bin/alacritty -e zsh, workspace number 2, mode "default"

  # workspace 3: D
  bindsym n exec /home/pmi_glisboa/.cargo/bin/alacritty --class NeoVim -e zsh -c "nvim ~/Projects", workspace number 3, mode "default"
  bindsym i exec intellij-idea-community, workspace number 3, mode "default"

  # workspace 4: F
  bindsym b exec firefox, workspace number 4, mode "default"

  # workspace 5: G
  bindsym w exec vboxmanage startvm "windows", workspace number 5, mode "default"
  bindsym Shift+s exec steam, workspace number 5, mode "default"
  bindsym d exec discord, workspace number 5, mode "default"

  # workspace 6: T
  bindsym c exec calibre, workspace number 6, mode "default"
  bindsym Shift+p exec pavucontrol, workspace number 6, mode "default"
  bindsym Shift+c exec --no-startup-id /opt/cisco/anyconnect/bin/vpnui, workspace number 6, mode "default"

  # workspace 7: R
  bindsym Shift+b exec chromium, workspace number 7, mode "default"
  bindsym q exec squirrelsql, workspace number 7, mode "default"

  # workspace 8: E
  bindsym p exec postman, workspace number 8, mode "default"

  # workspace 9: W
  bindsym a exec anki, workspace number 9, mode "default"
  bindsym r exec remmina -c /home/pmi_glisboa/.local/share/remmina/group_rdp_a4-zenv2_a4-zenv2.remmina, workspace number 9, mode "default"

  # workspace 10: Q
  bindsym s exec stremio, workspace number 10, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+space mode "default"
}

mode $mode_bluetooth {
  bindsym f exec --no-startup-id bluetoothctl power on, mode "default"
  bindsym d exec --no-startup-id bluetoothctl power off, mode "default"
  bindsym j exec --no-startup-id bluetoothctl connect $headset, mode "default"
  bindsym k exec --no-startup-id bluetoothctl disconnect $headset, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+b mode "default"
}

mode $mode_uol {
  bindsym q exec --no-startup-id bash uh hostesse qa ; exec --no-startup-id notify-send -i /home/pmi_glisboa/Pictures/uol-icon.png -t 2000 -u normal "UOL HOST" "Environment changed to QA", mode "default"
  bindsym p exec --no-startup-id bash uh hostesse prod ; exec --no-startup-id notify-send -i /home/pmi_glisboa/Pictures/uol-icon.png -t 2000 -u normal "UOL HOST" "Environment changed to PROD" , mode "default"
  bindsym s exec --no-startup-id bash uh saca | xclip -sel clip ; exec --no-startup-id notify-send -i /home/pmi_glisboa/Pictures/uol-icon.png -t 2000 -u normal "UOL HOST" "SACA URL successfully copied" , mode "default"
  bindsym Shift+s exec --no-startup-id bash uh saca | sed 's/.*permission=\(.*\)/\1/g' | tr -d '\n' | xclip -sel clip ; exec --no-startup-id notify-send -i /home/pmi_glisboa/Pictures/uol-icon.png -t 2000 -u normal "UOL HOST" "SACA permission successfully copied" , mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+u mode "default"
}

mode $mode_windows_manager {
  # change focus
  bindsym h focus left
  bindsym j focus down
  bindsym k focus up
  bindsym l focus right

  # move focused window
  bindsym $mod+h move left
  bindsym $mod+j move down
  bindsym $mod+k move up
  bindsym $mod+l move right

  # toggle tiling / floating
  bindsym space floating toggle

  # change focus between tiling / floating windows
  bindsym Shift+space focus mode_toggle

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+Shift+Return mode "default"
}

mode $mode_resize {
  bindsym h resize shrink width 5 px or 5 ppt
  bindsym j resize grow height 5 px or 5 ppt
  bindsym k resize shrink height 5 px or 5 ppt
  bindsym l resize grow width 5 px or 5 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

# Set font
font pango: MesloLGS NF Regular 12

# Start autotiling
exec_always --no-startup-id autotiling

# Hide edge borders
hide_edge_borders both

# Fix floating windows
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [instance="(?i)teams"] floating disable
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center
for_window [class="VirtualBox Machine"] fullscreen enable
for_window [class="Stremio"] fullscreen enable

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Set the wallpaper
exec_always --no-startup-id feh --no-fehbg --bg-fill $home/.dotfiles/.wallpaper/wallpaper.jpg

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color

# Disable title bar
default_border pixel 1
default_floating_border pixel 1

# Launch apps
exec --no-startup-id /opt/cisco/anyconnect/bin/vpnui
exec --no-startup-id sh -c "systemctl --user import-environment DISPLAY XAUTHORITY; out=$(pidof ZSTray); if [ -z  $out ]; then systemctl --user start ZSTray ; else /opt/zscaler/bin/ZSTray %u; fi"
exec --no-startup-id /opt/cososys/bin/epp-client
exec chromium --class Teams --app=https://teams.microsoft.com/
exec firefox
